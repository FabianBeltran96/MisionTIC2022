<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane minHeight="600.0" minWidth="1000.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="reto5.SpotSound.vista.controlador">
   <left>
      <VBox fx:id="panelIzq" alignment="TOP_CENTER" minWidth="400.0" spacing="50.0">
         <children>
            <Label fx:id="tituloSS" alignment="TOP_CENTER" text="SpotSound">
               <font>
                  <Font size="54.0" />
               </font>
               <VBox.margin>
                  <Insets top="50.0" />
               </VBox.margin>
            </Label>
            <HBox alignment="TOP_CENTER" BorderPane.alignment="CENTER">
               <children>
                  <VBox alignment="CENTER_LEFT" maxHeight="200.0" spacing="15.0">
                     <children>
                        <Label minWidth="20.0" text="Nombre:">
                           <padding>
                              <Insets top="10.0" />
                           </padding>
                           <font>
                              <Font size="30.0" />
                           </font>
                        </Label>
                        <Label minWidth="20.0" text="Genero:">
                           <padding>
                              <Insets top="10.0" />
                           </padding>
                           <font>
                              <Font size="30.0" />
                           </font>
                        </Label>
                        <Label minWidth="20.0" text="Pais:">
                           <padding>
                              <Insets top="10.0" />
                           </padding>
                           <font>
                              <Font size="30.0" />
                           </font>
                        </Label>
                     </children>
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </VBox>
                  <VBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="10.0" maxHeight="200.0" prefHeight="200.0" prefWidth="148.0" spacing="15.0">
                     <children>
                        <TextField fx:id="getNombre" />
                        <TextField fx:id="getGenero" />
                        <TextField fx:id="getPais" />
                     </children>
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </VBox>
               </children>
               <VBox.margin>
                  <Insets bottom="50.0" top="50.0" />
               </VBox.margin>
            </HBox>
            <Button fx:id="btnInsertar" alignment="CENTER" mnemonicParsing="false" onAction="#insertarArtista" prefHeight="30.0" text="Insertar" />
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </VBox>
   </left>
   <center>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <HBox fx:id="infoPrincipal" alignment="CENTER" prefHeight="100.0" spacing="25.0">
               <children>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="125.0" spacing="5.0">
                     <children>
                        <Label text="Artista ID">
                           <font>
                              <Font size="19.0" />
                           </font></Label>
                        <TextField fx:id="IdPrincipal" />
                     </children>
                  </VBox>
                  <VBox alignment="CENTER" layoutX="10.0" layoutY="10.0" prefHeight="200.0" prefWidth="125.0" spacing="5.0">
                     <children>
                        <Label text="Nombre">
                           <font>
                              <Font size="19.0" />
                           </font></Label>
                        <TextField fx:id="NombrePrincipal" />
                     </children>
                  </VBox>
                  <VBox alignment="CENTER" layoutX="130.0" layoutY="10.0" prefHeight="200.0" prefWidth="125.0" spacing="5.0">
                     <children>
                        <Label text="Genero">
                           <font>
                              <Font size="19.0" />
                           </font></Label>
                        <TextField fx:id="GeneroPrincipal" />
                     </children>
                  </VBox>
                  <VBox alignment="CENTER" layoutX="240.0" layoutY="10.0" prefHeight="200.0" prefWidth="125.0" spacing="5.0">
                     <children>
                        <Label text="Pais">
                           <font>
                              <Font size="19.0" />
                           </font></Label>
                        <TextField fx:id="PaisPrincipal" />
                     </children>
                  </VBox>
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <VBox.margin>
                  <Insets top="25.0" />
               </VBox.margin>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
            <HBox fx:id="panelBtn1" alignment="CENTER" spacing="20.0">
               <children>
                  <Button fx:id="btnArtistaAnterior" mnemonicParsing="false" onAction="#obtArtistaAnterior" prefHeight="30.0" text="Artista Anterior" />
                  <Button fx:id="btnArtistaSiguiente" mnemonicParsing="false" onAction="#obtArtistaSiguiente" text="Artista Siguiente" />
               </children>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </HBox>
            <HBox fx:id="panelBtn2" alignment="CENTER" spacing="20.0">
               <children>
                  <Button fx:id="btnBuscar" mnemonicParsing="false" onAction="#buscarArtista" prefHeight="30.0" text="Buscar" />
                  <Button fx:id="btnModificar" mnemonicParsing="false" onAction="#modificarArtista" prefHeight="30.0" text="Actualizar" />
                  <Button fx:id="btnBorrar" mnemonicParsing="false" onAction="#borrarArtista" prefHeight="30.0" text="Borrar" />
                  <Button fx:id="btnObtTodos" mnemonicParsing="false" onAction="#actualizarTabla" prefHeight="30.0" text="Obtener Todos" />
               </children>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </HBox>
            <TableView fx:id="artistaTabla">
              <columns>
                <TableColumn fx:id="idColumna" maxWidth="2000.0" minWidth="-1.0" prefWidth="-1.0" text="ID" />
                <TableColumn fx:id="nombreColumna" minWidth="-1.0" prefWidth="-1.0" text="Nombre" />
                  <TableColumn fx:id="generoColumna" minWidth="-1.0" prefWidth="-1.0" text="Genero" />
                  <TableColumn fx:id="paisColumna" minWidth="-1.0" prefWidth="-1.0" text="Pais" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
               <VBox.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </VBox.margin>
            </TableView>
         </children>
         <BorderPane.margin>
            <Insets left="25.0" right="25.0" />
         </BorderPane.margin>
      </VBox>
   </center>
</BorderPane>
